/**detail.wxss**/
page{background: #f5f5f5;}
.main{
    height: 100%;
    width: 100%;
}
.detail { padding:16px 16px 56px;}
.detail .tit .state{ vertical-align: top; margin-right:5px;}
.detail .user-info{ height: 44px; line-height: 28px; padding-bottom: 16px;}
.detail .user-info .avatar image{ width: 28px; height: 28px; border-radius: 50%; margin-right: 8px;}
.detail-content{ font-size: 16px; line-height: 26px;}
.detail-content text{ margin-top: 20px;}

.detail-albums{ overflow: hidden; margin:26px -16px 0;}
.detail-albums .pic-item{ position: relative; padding-bottom:33%; width: 33%; margin-bottom: 0.25%; margin-left:0.25%; float: left;}
.detail-albums .pic-item image{ width:100%; height:100%; position: absolute;}

.detail-footer{ margin-top: 16px; height: 18px; line-height: 18px;}
.detail-footer .iconfont::before{ margin-right: 5px; font-size: 18px; vertical-align: top;}

.comment-box .avatar{ width: 32px;}
.comment-box .avatar image{ width:32px; height: 32px; border-radius: 50%;}
.comment-box .comment-tit{ line-height: 36px;}
.comment-box .comment-list-item{ margin-top: 16px;}
.comment-box .prise{ position: relative; z-index: 1;}
.comment-box .prise text{ display: block; float: left;}
.comment-box .prise text:first-child::before{ margin-right: 5px;}
.comment-box .prise .icon-more{ padding-left: 16px; font-size: 16px;}
.comment-box .content-info{ position: relative;}
.comment-box .options{ position: absolute; top: -4px; right: 24px; overflow: hidden;}
.comment-box .options-box{ -webkit-transform: translate(100%,0);transform: translate(100%,0);-webkit-transition: all .2s linear;transition: all .2s linear; overflow: hidden; padding-right: 4px; position: relative; white-space: nowrap;}
.comment-box .options.active{ z-index: 2;}
.comment-box .options.active .options-box{ -webkit-transform: translate(0,0);transform: translate(0,0);}
.comment-box .options-box::before{position: absolute;right:0;top: 50%; margin-top: -4px; content: ""; height: 0; width: 0; border-left: 4px solid rgba(0,0,0,.8); border-top: 4px dashed transparent;border-bottom: 4px dashed transparent;}
.comment-box .options-box view{ float: left; padding:4px 16px; color: #fff; position: relative; background: rgba(0, 0, 0, 0.8);}
.comment-box .options view.last::before{ content: ""; display: block; position: absolute; left: 0; top: 6px; bottom: 6px; border-left: 1px solid rgba(255,255,255,0.2);}
.comment-box .options-box view:first-child{ border-radius: 2px 0 0 2px;}
.comment-box .options-box view:last-child{ border-radius: 0 2px 2px 0;}
.comment-box .blockquote{ background: #efefef; padding:8px; font-size: 12px; margin-top: 5px; color: #8f8f8f;}

.footBar{ position:fixed; left: 0; bottom: 0; right: 0; background: #fff; z-index: 99; height: 48px;}
.footBar .input{ margin: 8px; line-height: 32px; background: #eee; border-radius: 20px;}
.footBar .opt{ padding:0 16px; line-height: 48px;}
.footBar .opt text{ display: block; float: left;}
.footBar .opt text::before{ margin-right: 5px;}

.mod-layer{ z-index: 999; background: #fafafa;}
.mod-layer .mod-bar{ height: 48px; background: #fff; line-height: 48px;}
.mod-layer .mod-bar .btn{ padding:0 16px;}
.mod-layer .input-text-box{ padding: 16px; height: 166px; background: #fafafa;z-index:1;}
.mod-layer .input-text-box textarea{ width: 100%; height: 100%; white-space: normal;}

.postinfo-img-layer{z-index: 999;background: #000;position:fixed;width:100%;height:100%;top:0px;}
.postinfo-img-layer-img image,.postinfo-img-layer-img{display:block;width:100%;height: 100%;}
.postinfo-img-layer-num{position: fixed;bottom:5px;color:#ffffff;font-size:16px;padding-left:10px;}

.input-text-btn{padding:0 16px;}
.b_manage{background:#eee;padding:5px 0;}






