/**forum.wxss**/
.forum .forum-item{}
.forum .forum-tit{ padding:16px; border-bottom: 1px solid #e8e8e8;}
.forum .forum-con{ background: #fff; padding:10px 16px; line-height: 19px;}
.forum .forum-img{ width:38px; height: 38px; margin-right: 10px; border-radius:3px;}
.forum .forum-name{ display: block;}
.forum .set{font-size: 14px; width: 24px; height: 24px; position: relative}
.forum .set::before,.forum .set::after{ width: 14px; height: 2px; position: absolute; left: 50%; top: 50%; -webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%); background: gray; content: ""; display: block;}
.forum .set::after{ display: none; -webkit-transform: translate(-50%,-50%) rotate(90deg);transform: translate(-50%,-50%) rotate(90deg);}
.forum .set.active::after{ display: block;}









