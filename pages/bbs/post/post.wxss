.new-post{ z-index: 999; padding-top: 48px;}
.mod-bar{ height: 48px; position: fixed; left: 0; top: 0; width: 100%; z-index: 999; background: #fff; line-height: 48px;}
.new-post .mod-bar .btn{ padding:0 16px;}
.new-post .mod-bar button{ -webkit-transform: scale(0.7);transform: scale(0.7); line-height:40px; height: 40px;}
.new-post .input-text-box{ padding: 16px; background: #fafafa;}
.new-post .input-text-box textarea{ width: 100%; height: 120px; white-space: normal;}
.new-post .upload-img{ padding:8px 16px 16px; overflow: hidden;}
.new-post .upload-img .item{ width: 60px; height: 60px; margin-top: 8px; float:left; margin-right: 8px;position: relative;}
.new-post .upload-img .item-del{position: absolute;top:-10px;left:45px;color:#fff;background:rgba(0, 0, 0, 0.8);border-radius: 50%;width:20px;height: 20px;text-align: center;z-index: 2;}
.new-post .upload-img .item image{ width: 100%; height: 100%;}
.new-post .upload-img .item.add{ border: 1px solid #ccc; position: relative;}
.new-post .upload-img .item.add::after,.new-post .upload-img .item.add::before{ content: ""; width: 50%; height: 4px; border-radius: 2px; display: block; position: absolute; background: #ccc; left: 50%; top: 50%; -webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%);}
