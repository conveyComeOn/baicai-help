@import "../../../../utils/selectarea/selectarea.wxss";
.list {
  background: #fff;
  border-top:1px solid #eee;
}
.list .item{
  padding:5px 15px;
  font-size: 14px;
  color:#333;
  position: relative;
  border-bottom: 1px solid #f3f3f3;
  display: -webkit-box;
}
.list .item label {
  line-height: 36px;
  width:60px;
  margin-right: 10px;
  color:#999;
  text-align: right;
  display: block;
}
.list .item input {
  width: 100%;
  height: 36px;
}
.list .item textarea {
  width: 100%;
  height: 50px;
  padding-top:5px;
}
.list .item:after{
  content:"";
  display: block;
  clear: both;
}
.list .text.arrowR::before{ right: 0;}
.add-bt button {
  background: #09bb07;
  padding:3px 30px;
  color:#fff;
  line-height: 2;
  border-radius: 5px;
}
.add-bt button:nth-child(2){ margin-top:-15px; background: #e64340;}
