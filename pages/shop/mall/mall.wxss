/**mall.wxss**/
.mall-menu{ height: 54px; line-height: 54px; background:#fff; overflow: hidden;}
.mall-menu .content{ white-space: nowrap;}
.mall-menu .content view{ display: inline-block; padding: 0 10px; height: 54px;}
.mall-menu view.active{ border-bottom: 2px solid #09BB07; color: #09BB07;}

.mall-list .content .item{ float: left; background: #fff; width: 47%; margin-top: 2%; margin-left: 2%;}
.mall-list .content .pic{ width: 100%; overflow: hidden; position: relative; padding-bottom: 80%;}
.mall-list .content .pic image{ width: 100%; height: 100%; position: absolute;}
.mall-list .content .price{ position: absolute; bottom: 6px; right: 6px; padding:0 6px; background: rgba(0, 0, 0, 0.4); color: #fff; border-radius: 3px;}
.mall-list .content .title{ margin: 6px 6px 6px; background: #fff; height: 36px; line-height: 140%;}

.cart-float-btn{ background:#e64340; color: #fff; width: 46px; height: 46px; border-radius: 50%; line-height: 46px; text-align: center; font-size: 24px; position: fixed; right: 16px; bottom: 16px; z-index: 99;}
.cart-float-btn.notempty::after{ content:""; display: block; width: 9px; height: 9px; border: 1px solid #e64340; border-radius: 50%; background: #fff; position: absolute; top:3px; right:3px;}
















