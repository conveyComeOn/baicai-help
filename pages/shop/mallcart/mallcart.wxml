<!--mallcart.wxml-->
<block wx:if="{{cart_list == null || cart_list == ''}}">
<!--暂无内容提示 start-->
<view class="no-content tc">
    <text class="no-content-icon iconfont icon-yemianwuneirong"></text>
    <view class="no-content-font">购物车暂无商品</view>
</view>
<!--暂无内容提示 end-->
</block>
<block wx:else>
<view class="mallcart">
    <view class="mallcart-title flex">
        <label class="radio">
        <checkbox-group bindchange="all_checkboxChange">
            <checkbox value="1" checked="{{all_is_checked}}"/>
        </checkbox-group>
        </label>
        <view class="sub"><text class="iconfont icon-shop sub"> 购物车</text></view>
        <view class="mallcart-del grey f18" bindtap="bind_delete_cart"><text class="iconfont icon-delete"></text></view>
    </view>
    <view class="cart-content">
    <checkbox-group bindchange="single_checkboxChange">
    <block wx:for="{{cart_list}}">
        <view class="cart-item flex">
            <label class="radio"><checkbox value="{{item.id}}" checked="{{item.is_checked}}"/></label>
            <image src="{{item.goods_img}}" mode="aspectFill"  class="cart-img"></image>
            <view class="cart-info sub">
                <text class="cart-title lineText2 mb5">{{item.goods_name}}</text>
                <view class="price f18 red mb5">￥{{item.goods_price}}</view>
                <view class="count-set fr tc flex">
                    <view class="sub" bindtap="bind_cart_number_jian" id="{{item.id}}"><text class="iconfont icon-move"></text></view>
                    <view class="sub"><input type="number" value="{{item.goods_number}}" class="buy-couts" disabled="true"/></view>
                    <view class="sub" bindtap="bind_cart_number_jia" id="{{item.id}}"><text class="iconfont icon-add"></text></view>
                </view>
            </view>
        </view>
    </block>
    </checkbox-group>
    </view>
</view>


<!--底部浮动 start-->
<view class="mallcart-float mt15">
    <view class="mallcart-foot flex gridXt">
        <label class="radio" style="padding:0 10px;"></label>
        <view class="mall-cart-sum sub tr">
            <view>合计： <text class="red f16">￥{{all_g_price}}</text></view>
            <text class="f12 grey">(共{{all_g_number}}件商品，含运费0元)</text>
        </view>
        <button class="mall-cart-btn ml10" bindtap="mallsure" disabled="{{btn_mall_sure_disabled}}">结算</button>
    </view>
</view>
<!--底部浮动 end-->
</block>